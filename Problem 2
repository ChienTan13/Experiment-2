#include <iostream>
#include <conio.h>

using namespace std;

int main ()
{
	double B, CC, GU;
	CC = 1.10;

	cout << "\t\t Let us compute your water bill! \n";
	cout << "\n";
	
	cout << "What is your balance last month? \n";
	cin >> B;
	cout << "\n";
	
	cout << "How many gallons have you used in your consumption? \n";
	cin >> GU;
	cout << "\n";
	
	if (B <= 0)
	{
	cout << "This would be your next balance, next month: ";
	cout << 35 + (CC*GU);
	cout << "\nThank you and have a good day!";
	}
	else 
	{
	cout << "Unfortunately, you have a balance of " << B << "PHP. \n";
	cout << "\n";
	cout << "You need to pay your unpaid balance in your next balance of:" << 35 + 20 + B + (CC*GU) << "PHP. \n";
	cout << "\nThank you and have a good day!";
	}
_getch();
return 0;
}
